${K_COEFF_DIR}/h2o_l${NBAND}_6l
5
y
${K_COEFF_DIR}/h2o_l${NBAND}_7l
5
y
${K_COEFF_DIR}/h2o_l${NBAND}_8l
5
y
${K_COEFF_DIR}/h2o_l${NBAND}_9l
5
y
${K_COEFF_DIR}/h2o_l${NBAND}_10l
5
y
${K_COEFF_DIR}/h2o_l${NBAND}_11l
5
y
${K_COEFF_DIR}/h2o_l${NBAND}_12l
9
${K_COEFF_DIR}/h2o_l${NBAND}_s
