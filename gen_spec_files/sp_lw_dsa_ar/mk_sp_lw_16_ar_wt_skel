#!/bin/bash
# This script creates a basic skeleton 16 band long-wave spectral file
# containing only H2O, CO2 and CH4. Bands from Woolf & Toon.
SPEC_SKEL_NAME=sp_lw_16_ar_wt_skel

prep_spec <<EOF
